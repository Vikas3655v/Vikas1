import java.util.Scanner;

public class SumCalculator {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        int a, b, sum;
        
        System.out.print("Enter a and b value: ");
        a = scanner.nextInt();
        b = scanner.nextInt();
        
        sum = a + b;
        
        System.out.println("The sum is: " + sum);
        
        scanner.close();
    }
}

